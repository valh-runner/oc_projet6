{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ parent() }} Oublie mot de passe{% endblock %}

{% block body %}
	<div class="row align-items-center" id="content-panel">
		<div class="offset-sm-1 col-sm-10 offset-md-2 col-md-8 offset-lg-3 col-lg-6 text-center" id="panel">
			<h1>Mot de passe oublié</h1>
			{{ form_start(form) }}
			{{ form_row(form.username, {
				'label': 'Nom d\'utilisateur' ,'attr' : {'placeholder': 'votre pseudo ...'}
			}) }}
			<div class="form-group text-center">
				<button type="submit" class="btn btn-success">Demander la réinitialisation du mot de passe</button>
			</div>
			{{ form_end(form) }}
			<div class="font-italic text-justify text-center"><p>Un e-mail va vous être envoyé pour choisir un nouveau mot de passe</p></div>
		</div>
	</div>
{% endblock %}
