{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Finalisation inscription{% endblock %}

{% block body %}
	<div class="row align-items-center" id="content-panel">
		<div class="offset-sm-1 col-sm-10 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-2 col-xl-8 text-center" id="panel">
			<h1>Finalisation de l'inscription</h1>
			{% for feedback in feedbacks %}
				<div class="alert alert-{{ feedback.0 }}" role="alert">
				    <p>{{ feedback.1 }}</p>
				    {% if ( feedback.0 == 'success' ) %}
				        <a href="{{ path('security_login') }}" class="btn btn-success">Se connecter</a>
				    {% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}