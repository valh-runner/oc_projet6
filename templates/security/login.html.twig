{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Connexion{% endblock %}

{% block body %}
	<div class="row align-items-center" id="content-panel">
		<div class="offset-sm-1 col-sm-10 offset-md-2 col-md-8 offset-lg-3 col-lg-6" id="panel">
			<h1 class="h2">Connexion</h1>

			{% if error %}
			    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form action="{{ path('security_login') }}" method="post">
				<div class="form-group text-center">
					<input placeholder="Nom d'utilisateur ou adresse e-mail ..." required name="_username" type="text" id="username" class="form-control" value="{{ last_username }}">
				</div>
				<div class="form-group text-center">
					<input placeholder="Mot de passe ..." required name="_password" type="password" id="password" class="form-control">
				</div>
    			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="form-group text-center">
					<button type="submit" class="btn btn-success">Connexion</button>
				</div>
			</form>
			<div class="text-center">
				<a href="{{ path('security_registration') }}">Inscription</a>
			</div>
			<div class="text-center">
				<a href="{{ path('security_forgot_password') }}">Mot de passe oubli√©?</a>
			</div>
		</div>
	</div>
{% endblock %}
