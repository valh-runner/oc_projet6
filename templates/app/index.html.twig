{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block fullbanner %}
	<div class="abs" id="fullbanner"></div>
{% endblock %}

{% block body %}
	<div class="row" id="thegap"></div>
	<div class="row" id="content">
		{% for trick in tricks %}
			<article class="col-sm-6 col-md-4 col-lg-3 trick-item">
				<div class="trick-item">
					<a href="{{ path('show', {'id': trick.id}) }}">
						<img class="img-fluid" src="{{ trick.pictures.first().filename }}" alt="">
						<div class="trick-item-bar">
							<div class="trick-item-title"><h3>{{ trick.name }}<h3></div>
							<div class="trick-item-edit"><a href="">Edit</a></div>
							<div class="trick-item-del"><a href="">Del</a></div>
						</div>
					</a>
				</div>
			</article>
		{% endfor %}
	</div>
	<div class="row">
		<p><a href="" class="btn btn-primary">Ajouter un trick</a></p>
	</div>
{% endblock %}
